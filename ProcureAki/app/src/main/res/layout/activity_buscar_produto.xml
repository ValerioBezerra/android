<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#01B8E0"
            android:id="@+id/btnBuscarProdutos"
            android:src="@drawable/paki_iconbusca"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00B1DD"
            android:id="@+id/edtBuscarProdutos"
            android:padding="10dp"
            android:hint="@string/o_que_voce_esta_buscando"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvProdutos"
        android:background="#01C2EB"
        android:backgroundTint="#00B1DD"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#01C2EB"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/nenhum_produto_encontrado"
        android:textColor="@color/white"
        android:id="@+id/txtNenhumProdutoEncontrado" />

</LinearLayout>
