<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeusEnderecosActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <ListView
            android:id="@+id/lvEnderecos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >
        </ListView>

        <LinearLayout
            android:id="@+id/llVazioEnderecos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nenhum_meu_endereco"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_action_new"
        android:onClick="clickAdicionar"
        app:layout_anchor="@id/lvEnderecos"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="5dp"
        app:backgroundTint="@color/fab_ripple_red" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_action_edit"
        android:onClick="clickEditar"
        app:layout_anchor="@id/lvEnderecos"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="5dp"
        app:backgroundTint="@color/fab_ripple_red" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabApagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_action_discard"
        android:onClick="clickApagar"
        app:layout_anchor="@id/lvEnderecos"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="5dp"
        app:backgroundTint="@color/fab_ripple_red" />
</android.support.design.widget.CoordinatorLayout><!-- From: file:/C:/Users/valerio/Documents/GitHub/android/EncontreDelivery/encontreDelivery/src/main/res/layout/activity_meus_enderecos.xml -->