<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/filtros"
        android:textColor="@color/primary_500"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_500" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:text="@string/pedidos"
        android:textColor="@color/primary_500"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

    <RadioGroup
        android:id="@+id/rgFiltro"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rbUltimosPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/ultimos"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/rbTodosPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todos"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_layout_marginTop"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnFiltrar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_height"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_weight="1"
            android:background="@drawable/button_not_shape"
            android:textColor="@color/primary_500"
            android:text="@string/filtrar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout_height"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_weight="1"
            android:background="@drawable/button_not_shape"
            android:textColor="@color/grey_black"
            android:text="@string/cancelar" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/valerio/Github/android/EncontreDelivery/encontreDelivery/src/main/res/layout/dialog_filtro_pedido.xml -->